{{#if isValid}}
<div>
    <h4>Filtrar segun:</h4>
        <ul>
            <li> <a href="http://localhost:8080/products?query=disponible">Disponibilidad</a></li>
            <li>Categorias</li>
            <li><a href="http://localhost:8080/products?query=Velas">Velas</a></li>
            <li><a href="http://localhost:8080/products?query=Esencia">Esencias</a></li>
            <li><a href="http://localhost:8080/products?query=Textil">Textiles</a></li>
            <li><a href="http://localhost:8080/products?query=Decoracion">Decoracion</a></li>
        </ul>
    <h4>Ordenar segun precio: </h4>
    <ul>
        <li> <a href="/products?sort=desc">Mayor a menor</a></li>
        <li> <a href="/products?sort=asc">Menor a mayor</a></li>

    </ul>
</div>
<h3>Listado de productos: </h3>
<div class="itemList"> 
    {{#each docs}}
    <div class="item">

        <p>Title: {{this.title}}</p>
        <p>Price: ${{this.price}}</p>
        <p>Category: {{this.category}}</p>
        
        <a href="/products/{{this.id}}">
            <button > Ver detalle </button>
        </a>
        <a href="">
            <button id="addCart_{{this.id}}" class="addProdToCart" data-pid="{{this._id}} " > Agregar al Carrito </button>
        </a>

    </div>
    {{/each}}
</div>

<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}
            &nbsp;
            {{this.page}}
            &nbsp;
            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}
</div>


{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}

